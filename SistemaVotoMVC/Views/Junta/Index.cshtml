@{
    Layout = null;
    // Recuperamos el objeto dinámico de la Junta
    var datosJunta = ViewBag.DatosJunta as System.Text.Json.JsonElement?;
    string estadoJunta = "ABIERTA"; // Valor por defecto
    
    if (datosJunta.HasValue && datosJunta.Value.TryGetProperty("estado", out var propEstado))
    {
        estadoJunta = propEstado.GetString() ?? "ABIERTA";
    }
}
@model IEnumerable<dynamic>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Gestión de Mesa</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
</head>
<body class="bg-light">

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4 p-3 bg-white shadow-sm rounded">
            <div>
                <h4 class="mb-0 text-primary">🗳️ Mesa Directiva</h4>
                <span class="badge @(estadoJunta == "ABIERTA" ? "bg-success" : estadoJunta == "PENDIENTE" ? "bg-warning text-dark" : "bg-primary")">
                    ESTADO: @estadoJunta
                </span>
            </div>
            
            @if(estadoJunta == "ABIERTA") 
            {
                <button class="btn btn-danger fw-bold" onclick="cerrarMesa()">
                    <i class="bi bi-door-closed"></i> CERRAR MESA
                </button>
            }
            else
            {
                <a asp-controller="Aut" asp-action="Logout" class="btn btn-outline-dark btn-sm">
                    <i class="bi bi-box-arrow-right"></i> Salir
                </a>
            }
        </div>

        @if(estadoJunta != "ABIERTA")
        {
            <div class="card shadow border-warning text-center p-5 mt-5">
                <div class="card-body">
                    <i class="bi bi-hourglass-split text-warning" style="font-size: 4rem;"></i>
                    <h2 class="mt-3">Mesa Cerrada</h2>
                    <p class="fs-5 text-muted">
                        Esta mesa ha finalizado la recepción de votos.
                        <br />
                        Estado actual: <strong>Esperando Aprobación del Administrador</strong>.
                    </p>
                    <div class="alert alert-info d-inline-block mt-3">
                        Ya no se pueden generar tokens ni habilitar votantes.
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="card border-primary mb-4">
                 <div class="card-body bg-primary text-white bg-opacity-75">
                    @if (datosJunta != null)
                    {
                        <div class="row text-center">
                            <div class="col-md-6"><h5>Junta ID: <span class="badge bg-white text-primary">@datosJunta.Value.GetProperty("id")</span></h5></div>
                            <div class="col-md-6"><h5>Mesa N°: <span class="badge bg-white text-primary">@datosJunta.Value.GetProperty("numeroMesa")</span></h5></div>
                        </div>
                    }
                </div>
            </div>

            @* BUSCADOR *@
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <input type="text" id="filtroCedula" class="form-control" placeholder="Buscar votante por cédula..." onkeyup="ejecutarFiltro()">
                </div>
            </div>

            <div class="table-responsive bg-white shadow-sm rounded">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th class="ps-4">Cédula</th>
                            <th>Nombre</th>
                            <th>Estado</th>
                            <th class="text-end pe-4">Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var v in Model)
                        {
                            string cedula = v.GetProperty("cedula").ToString();
                            string nombre = v.GetProperty("nombreCompleto").ToString();
                            bool haVotado = v.GetProperty("haVotado").GetBoolean();

                            <tr class="fila-votante">
                                <td class="col-cedula ps-4 fw-bold">@cedula</td>
                                <td>@nombre</td>
                                <td>
                                    @if (haVotado) { <span class="badge bg-success">VOTÓ</span> }
                                    else { <span class="badge bg-warning text-dark">PENDIENTE</span> }
                                </td>
                                <td class="text-end pe-4">
                                    @if (!haVotado)
                                    {
                                        <button class="btn btn-primary btn-sm" onclick="generarToken('@cedula', '@nombre')">
                                            Habilitar
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>

    <div class="modal fade" id="modalToken" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">¡Voto Habilitado!</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center py-4">
                    <h4 id="nombreVotanteModal" class="fw-bold mb-3"></h4>
                    <div class="display-1 fw-bold text-success my-3" id="tokenDisplay" style="letter-spacing: 5px;"></div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function ejecutarFiltro() {
            let texto = document.getElementById("filtroCedula").value;
            let filas = document.getElementsByClassName("fila-votante");
            for (let tr of filas) {
                let cedula = tr.getElementsByClassName("col-cedula")[0].innerText;
                tr.style.display = cedula.includes(texto) ? "" : "none";
            }
        }

        function generarToken(cedula, nombre) {
            // ... (Tu función generarToken existente) ...
             if(!confirm("¿Habilitar a " + nombre + "?")) return;
            fetch('/Junta/GenerarToken', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: 'cedula=' + cedula
            })
            .then(r => r.json())
            .then(d => {
                if(d.success) {
                    document.getElementById("nombreVotanteModal").innerText = nombre;
                    document.getElementById("tokenDisplay").innerText = d.token;
                    new bootstrap.Modal(document.getElementById('modalToken')).show();
                } else alert(d.message);
            });
        }

        function cerrarMesa() {
            if(!confirm("¿Está seguro de CERRAR LA MESA?\n\n- Ya no podrá habilitar más votos.\n- La mesa pasará a estado PENDIENTE.")) return;

            fetch('/Junta/CerrarMesa', { method: 'POST' })
            .then(r => r.json())
            .then(d => {
                alert(d.message);
                location.reload(); // Recargar para ver la pantalla de bloqueo
            });
        }
    </script>
</body>
</html>