@model IEnumerable<SistemaVotoModelos.Eleccion>
@{
    ViewData["Title"] = "Elecciones Disponibles";
    Layout = "_Layout";
}

<div class="container mt-5">
    @* ENCABEZADO *@
    <div class="text-center mb-5">
        <h1 class="fw-bold text-primary">🗳️ Elecciones Disponibles</h1>
        <p class="text-muted fs-5">Bienvenido. Seleccione la votación para continuar.</p>
    </div>

    @* MENSAJES DE ERROR *@
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center shadow-sm mb-4">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
        </div>
    }

    @* TARJETAS DE ELECCIONES *@
    <div class="row justify-content-center">
        @if (Model != null && Model.Any())
        {
            @foreach (var eleccion in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow border-0 h-100 card-hover">
                        <div class="card-body text-center py-5">
                            <div class="mb-4">
                                <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex p-4">
                                    <i class="bi bi-box-seam-fill text-primary" style="font-size: 3rem;"></i>
                                </div>
                            </div>

                            <h3 class="fw-bold text-dark mb-3">@eleccion.Titulo</h3>

                            <div class="mb-4">
                                <span class="badge bg-light text-dark border px-3 py-2 rounded-pill">
                                    <i class="bi bi-calendar-event me-1"></i>
                                    Cierre: @eleccion.FechaFin.ToString("dd/MMM HH:mm")
                                </span>
                            </div>

                            <a asp-action="Papeleta" asp-route-eleccionId="@eleccion.Id"
                               class="btn btn-primary btn-lg w-100 rounded-pill fw-bold shadow-sm">
                                INGRESAR A VOTAR <i class="bi bi-arrow-right-circle ms-2"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center mt-4">
                <div class="alert alert-warning d-inline-block px-5 py-4 shadow-sm border-warning">
                    <i class="bi bi-info-circle-fill fs-3 d-block mb-3"></i>
                    <span class="fs-5">No hay elecciones activas asignadas a usted en este momento.</span>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card-hover {
        transition: transform 0.2s ease-in-out;
    }

        .card-hover:hover {
            transform: translateY(-5px);
        }
</style>