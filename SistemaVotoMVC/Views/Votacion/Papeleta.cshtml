@model IEnumerable<SistemaVotoModelos.Candidato>
@{
    ViewData["Title"] = "Papeleta de Votación";
    Layout = "_Layout";
    var eleccion = ViewBag.Eleccion as SistemaVotoModelos.Eleccion;
}

<div class="container mt-4 mb-5">

    @* --- INFORMACIÓN DE MESA Y RECINTO --- *@
    <div class="card border-0 shadow-sm bg-white mb-4">
        <div class="card-body d-flex justify-content-between align-items-center flex-wrap px-4 py-3">
            <div class="d-flex align-items-center mb-2 mb-md-0">
                <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3 text-primary">
                    <i class="bi bi-geo-alt-fill fs-4"></i>
                </div>
                <div>
                    <small class="text-uppercase text-muted fw-bold" style="font-size: 0.75rem;">Recinto Electoral</small>
                    <h5 class="fw-bold text-dark mb-0">@ViewBag.Recinto</h5>
                </div>
            </div>
            <div>
                <span class="badge bg-primary fs-5 px-4 py-2 rounded-pill shadow-sm">
                    Mesa N° @ViewBag.NumeroMesa
                </span>
            </div>
        </div>
    </div>

    @* TITULO DE LA ELECCIÓN *@
    <div class="text-center mb-5">
        <h1 class="display-6 fw-bold text-primary text-uppercase">@eleccion?.Titulo</h1>
        <p class="lead text-muted fs-6">Por favor, seleccione su candidato de preferencia.</p>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger d-inline-block px-4 shadow-sm mt-2">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
            </div>
        }
    </div>

    @* LISTA DE CANDIDATOS *@
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 justify-content-center">
        @if (!Model.Any())
        {
            <div class="col-12 text-center text-muted py-5">
                <i class="bi bi-inbox fs-1 d-block mb-3 opacity-50"></i>
                <p>No hay candidatos registrados para esta elección.</p>
            </div>
        }
        else
        {
            @foreach (var c in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow border-0 hover-effect">

                        @* CABECERA DE LISTA *@
                        <div class="card-header bg-white border-bottom-0 text-center pt-4 pb-0">
                            @if (!string.IsNullOrEmpty(c.Lista?.LogoUrl))
                            {
                                <img src="@c.Lista.LogoUrl" style="height: 60px; object-fit: contain;" alt="Logo Lista" class="img-fluid mb-2">
                                <h5 class="fw-bold text-dark small mb-0">@c.Lista?.NombreLista</h5>
                            }
                            else
                            {
                                <span class="badge bg-dark mb-2">LISTA @c.ListaId</span>
                                <h5 class="fw-bold text-dark small mb-0">Lista Independiente</h5>
                            }
                        </div>

                        @* CUERPO CON FOTO *@
                        <div class="card-body text-center pt-3">
                            <div class="mb-3 position-relative d-inline-block">
                                @if (!string.IsNullOrEmpty(c.Votante?.FotoUrl))
                                {
                                    <img src="@c.Votante.FotoUrl" class="rounded-circle border border-3 border-light shadow-sm"
                                         style="width: 130px; height: 130px; object-fit: cover;" alt="Foto">
                                }
                                else
                                {
                                    <div class="rounded-circle bg-light text-secondary d-flex align-items-center justify-content-center border border-3 border-white shadow-sm"
                                         style="width: 130px; height: 130px; font-size: 3rem;">
                                        <i class="bi bi-person-fill"></i>
                                    </div>
                                }
                            </div>

                            <h5 class="card-title fw-bold text-primary mb-1">@c.Votante?.NombreCompleto</h5>
                            <span class="badge bg-light text-secondary border">@c.RolPostulante</span>
                        </div>

                        @* PIE CON BOTÓN *@
                        <div class="card-footer bg-white border-0 pb-4 px-4 pt-0">
                            <hr class="mb-4 opacity-25">

                            <form asp-action="EmitirVoto" method="post">
                                <input type="hidden" name="eleccionId" value="@c.EleccionId" />
                                <input type="hidden" name="cedulaCandidato" value="@c.Cedula" />
                                <input type="hidden" name="listaId" value="@c.ListaId" />

                                <input type="hidden" name="rolPostulante" value="@c.RolPostulante" />
                                <button type="submit" class="btn btn-outline-primary btn-lg w-100 rounded-pill fw-bold transition-btn"
                                        onclick="return confirm('¿Confirma su voto por @c.Votante?.NombreCompleto?')">
                                    VOTAR <i class="bi bi-check2-circle ms-1"></i>
                                </button>
                            </form>
                        </div>

                    </div>
                </div>
            }
        }
    </div>
</div>

<style>
    .hover-effect {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .hover-effect:hover {
            transform: translateY(-5px);
            box-shadow: 0 1rem 3rem rgba(0,0,0,.15) !important;
        }

    .transition-btn {
        transition: all 0.2s;
    }

        .transition-btn:hover {
            background-color: #0d6efd;
            color: white;
            transform: scale(1.02);
        }

        .transition-btn:active {
            transform: scale(0.98);
        }
</style>