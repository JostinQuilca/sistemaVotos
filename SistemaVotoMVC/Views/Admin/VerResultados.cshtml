@{
    ViewData["Title"] = "Resultados Electorales";
    Layout = "_Layout"; // Layout de Admin

    // 1. RECUPERAR DATOS DEL API (JSON)
    var datos = (System.Text.Json.JsonElement)ViewBag.Resultados;

    // Extraer valores seguros
    int eleccionId = 0;
    int totalVotos = 0;
    System.Text.Json.JsonElement detalle = default;

    // Validamos que el JSON no esté vacío antes de intentar leer
    if (datos.ValueKind != System.Text.Json.JsonValueKind.Undefined)
    {
        if (datos.TryGetProperty("eleccionId", out var pId)) eleccionId = pId.GetInt32();
        if (datos.TryGetProperty("totalVotos", out var pTotal)) totalVotos = pTotal.GetInt32();
        if (datos.TryGetProperty("detalle", out var pDetalle)) detalle = pDetalle;
    }
}

<div class="container mt-4">

    @* ENCABEZADO *@
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-0">📊 Resultados en Tiempo Real</h2>
            <p class="text-muted">Escrutinio automatizado de la Urna Digital</p>
        </div>
        <div class="text-end">
            <h1 class="display-4 fw-bold text-dark mb-0">@totalVotos</h1>
            <span class="badge bg-dark fs-6">VOTOS TOTALES</span>
        </div>
    </div>

    @* CONTENIDO PRINCIPAL *@
    @if (totalVotos == 0)
    {
        <div class="alert alert-warning text-center p-5 shadow-sm border-0">
            <div class="mb-3">
                <i class="bi bi-inbox fs-1 text-warning opacity-50" style="font-size: 4rem;"></i>
            </div>
            <h3 class="mt-3 fw-bold">Aún no hay votos registrados</h3>
            <p class="text-muted">Los resultados aparecerán aquí apenas inicie la votación.</p>

            <a href="javascript:location.reload()" class="btn btn-outline-dark mt-3 px-4 rounded-pill">
                <i class="bi bi-arrow-clockwise me-2"></i> Actualizar Ahora
            </a>
        </div>
    }
    else
    {
        <div class="row">
            @if (detalle.ValueKind == System.Text.Json.JsonValueKind.Array)
            {
                foreach (var c in detalle.EnumerateArray())
                {
                    // Extraer datos de cada candidato del JSON
                    string nombre = c.GetProperty("nombre").GetString() ?? "Desconocido";
                    string lista = c.GetProperty("lista").GetString() ?? "-";
                    string listaLogo = c.TryGetProperty("listaLogo", out var lLogo) ? lLogo.GetString() : "";
                    string foto = c.TryGetProperty("fotoUrl", out var fUrl) ? fUrl.GetString() : "";
                    int votos = c.GetProperty("votos").GetInt32();
                    double porc = c.GetProperty("porcentaje").GetDouble();

                    <div class="col-md-6 mb-4">
                        <div class="card shadow-sm border-0 h-100 hover-card">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">

                                    @* FOTO CANDIDATO *@
                                    <div class="me-3 position-relative">
                                        @if (!string.IsNullOrEmpty(foto))
                                        {
                                            <img src="@foto" class="rounded-circle border border-2 border-light shadow-sm"
                                                 style="width: 70px; height: 70px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="bg-light rounded-circle text-secondary d-flex align-items-center justify-content-center border"
                                                 style="width: 70px; height: 70px;">
                                                <i class="bi bi-person-fill fs-2"></i>
                                            </div>
                                        }

                                        @* LOGO LISTA (Pequeño) *@
                                        @if (!string.IsNullOrEmpty(listaLogo))
                                        {
                                            <img src="@listaLogo" class="position-absolute bottom-0 end-0 bg-white rounded-circle border p-1 shadow-sm"
                                                 style="width: 30px; height: 30px; object-fit: contain;">
                                        }
                                    </div>

                                    @* TEXTOS *@
                                    <div class="flex-grow-1 overflow-hidden">
                                        <h5 class="fw-bold mb-0 text-truncate text-dark">@nombre</h5>
                                        <small class="text-muted d-block text-truncate">@lista</small>
                                    </div>

                                    @* PORCENTAJE GRANDE *@
                                    <div class="text-end ps-3">
                                        <h3 class="fw-bold text-primary mb-0">@porc.ToString("0.0")%</h3>
                                        <small class="text-muted fw-bold">@votos Votos</small>
                                    </div>
                                </div>

                                @* BARRA DE PROGRESO *@
                                <div class="progress" style="height: 12px; border-radius: 10px;">
                                    <div class="progress-bar progress-bar-striped progress-bar-animated bg-success"
                                         role="progressbar"
                                         style="width: @porc.ToString("0")%">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    }

    @* BOTONES DE ACCIÓN *@
    <div class="d-flex justify-content-center mt-5 gap-3">
        <a href="javascript:location.reload()" class="btn btn-primary px-4 fw-bold shadow-sm">
            <i class="bi bi-arrow-clockwise me-2"></i> Actualizar Datos
        </a>

        <a asp-action="GestionElecciones" class="btn btn-outline-secondary px-4 fw-bold">
            <i class="bi bi-arrow-left me-2"></i> Volver a Lista
        </a>
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .hover-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }
</style>