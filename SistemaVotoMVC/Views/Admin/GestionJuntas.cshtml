@using SistemaVotoModelos.DTOs
@model IEnumerable<JuntaDetalleDto>
@{
    ViewData["Title"] = "Gestión de Juntas";
    var direcciones = ViewBag.Direcciones as List<SistemaVotoModelos.Direccion>;
    var posiblesJefes = ViewBag.PosiblesJefes as List<SistemaVotoModelos.Votante>;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h3 class="mb-0">🏗️ Gestión de Mesas y Juntas</h3>
        <small class="text-muted">Administra las mesas de votación del sistema.</small>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="Main" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>

        <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#modalCrear">
            <i class="bi bi-plus-square"></i> Generar Mesas
        </button>
    </div>
</div>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow-sm border-0">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-warning">
                    <tr>
                        <th>Ubicación (Recinto)</th>
                        <th class="text-center">Mesa N°</th>
                        <th class="text-center">Jefe y Estado</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <i class="bi bi-geo-alt-fill text-muted"></i> @item.Ubicacion
                            </td>

                            <td class="fw-bold text-center">
                                <span class="badge bg-light text-dark border">@item.NumeroMesa</span>
                            </td>

                            <td class="text-center">
                                @* Nombre del Jefe *@
                                @if (string.IsNullOrEmpty(item.NombreJefe) || item.NombreJefe == "Sin asignar")
                                {
                                    <span class="badge bg-danger mb-1">Sin Asignar</span>
                                }
                                else
                                {
                                    <span class="badge bg-primary mb-1">
                                        <i class="bi bi-person-fill"></i> @item.NombreJefe
                                    </span>
                                }

                                <br />

                                @* Badge de Estado - CORREGIDO *@
                                @if (item.EstadoJunta == 1)
                                {
                                    <span class="badge bg-secondary text-white" style="font-size:0.7em">CREADA</span>
                                }
                                else if (item.EstadoJunta == 2)
                                {
                                    <span class="badge bg-success" style="font-size:0.7em">🟢 ABIERTA (VOTANDO)</span>
                                }
                                else if (item.EstadoJunta == 3)
                                {
                                    <span class="badge bg-warning text-dark border border-dark" style="font-size:0.7em">⚠️ PENDIENTE APROBACIÓN</span>
                                }
                                else if (item.EstadoJunta == 4)
                                {
                                    <span class="badge bg-info text-dark" style="font-size:0.7em">🔵 APROBADA (FINAL)</span>
                                }
                            </td>

                            <td class="text-end">
                                <div class="btn-group">

                                    @* 1. BOTÓN DE APROBACIÓN (SOLO SI ESTÁ PENDIENTE) *@
                                    @if (item.EstadoJunta == 3)
                                    {
                                        <form asp-action="AprobarJunta" method="post" onsubmit="return confirm('¿Confirmar conteo y aprobar mesa?');" class="d-inline">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button class="btn btn-success btn-sm" title="Aprobar Cierre de Mesa">
                                                <i class="bi bi-check-circle-fill"></i> Aprobar
                                            </button>
                                        </form>
                                    }

                                    @* 2. BOTÓN ASIGNAR JEFE (Deshabilitado si ya cerró la mesa) *@
                                    <button class="btn btn-outline-primary btn-sm"
                                            onclick="abrirAsignar(@item.Id)"
                                            title="Asignar Jefe"
                                            @(item.EstadoJunta > 2 ? "disabled" : "")>
                                        <i class="bi bi-person-check"></i>
                                    </button>

                                    @* 3. BOTÓN ELIMINAR (Deshabilitado si ya hay votos/abierta) *@
                                    <form asp-action="EliminarJunta" method="post"
                                          onsubmit="return confirm('¿Eliminar mesa?');"
                                          class="d-inline">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button class="btn btn-outline-danger btn-sm" title="Eliminar" @(item.EstadoJunta > 1 ? "disabled" : "")>
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="modalCrear" tabindex="-1">
    <div class="modal-dialog">
        <form asp-action="CrearPorDireccion" method="post" class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title">Generar Mesas</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <label>Recinto (Dirección)</label>
                <select name="direccionId" class="form-select mb-3" required>
                    @foreach (var d in direcciones)
                    {
                        <option value="@d.Id">
                            @d.Provincia - @d.Canton - @d.Parroquia
                        </option>
                    }
                </select>

                <label>Cantidad de Mesas</label>
                <input type="number" name="cantidad" class="form-control"
                       value="1" min="1" required />
            </div>
            <div class="modal-footer">
                <button class="btn btn-warning w-100">Generar</button>
            </div>
        </form>
    </div>
</div>

<div class="modal fade" id="modalAsignar" tabindex="-1">
    <div class="modal-dialog">
        <form asp-action="AsignarJefe" method="post" class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Asignar Jefe de Junta</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" name="juntaId" id="inputJuntaId" />

                <label>Votante</label>
                <select name="cedulaJefe" class="form-select" required>
                    <option value="">-- Seleccionar Persona --</option>
                    @foreach (var v in posiblesJefes)
                    {
                        <option value="@v.Cedula">
                            @v.Cedula - @v.NombreCompleto
                        </option>
                    }
                </select>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary w-100">Guardar Asignación</button>
            </div>
        </form>
    </div>
</div>

<script>
    function abrirAsignar(id) {
        document.getElementById('inputJuntaId').value = id;
        new bootstrap.Modal(document.getElementById('modalAsignar')).show();
    }
</script>