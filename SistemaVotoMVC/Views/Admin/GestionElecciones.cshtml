@model IEnumerable<SistemaVotoModelos.Eleccion>
@{
    ViewData["Title"] = "Gestión de Elecciones";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h3 class="mb-0">🗳️ Gestión de Elecciones</h3>
        <small class="text-muted">Administra las elecciones del sistema.</small>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="Main" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalNueva">
            <i class="bi bi-plus-circle"></i> Nueva Elección
        </button>
    </div>
</div>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">@TempData["Mensaje"]<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">@TempData["Error"]<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
}

<div class="card shadow-sm border-0">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Título</th>
                        <th>Estado</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td class="fw-bold">
                                @item.Titulo
                                <div class="small text-muted">
                                    @item.FechaInicio.ToString("dd/MMM HH:mm") - @item.FechaFin.ToString("dd/MMM HH:mm")
                                </div>
                            </td>
                            <td>
                                <span class="badge @(item.Estado == "ACTIVA" ? "bg-success" : item.Estado == "CONFIGURACION" ? "bg-warning text-dark" : "bg-secondary")">
                                    @item.Estado
                                </span>
                            </td>
                            <td class="text-end">
                                <div class="btn-group">
                                    <a asp-action="VerResultados" asp-route-eleccionId="@item.Id" class="btn btn-outline-info btn-sm" title="Ver Resultados">
                                        <i class="bi bi-bar-chart-fill"></i>
                                    </a>

                                    <button class="btn btn-outline-primary btn-sm" onclick="abrirEditar(@item.Id, '@item.Titulo', '@item.FechaInicio.ToString("yyyy-MM-ddTHH:mm")', '@item.FechaFin.ToString("yyyy-MM-ddTHH:mm")')" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </button>

                                    <a asp-action="GestionListas" asp-route-eleccionId="@item.Id" class="btn btn-outline-success btn-sm" title="Listas">
                                        <i class="bi bi-list-ul"></i>
                                    </a>

                                    <a asp-action="GestionCandidatos" asp-route-eleccionId="@item.Id" class="btn btn-outline-dark btn-sm" title="Candidatos">
                                        <i class="bi bi-person-badge"></i>
                                    </a>

                                    <form asp-action="EliminarEleccion" method="post" onsubmit="return confirm('¿Eliminar?');" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button class="btn btn-outline-danger btn-sm" title="Eliminar"><i class="bi bi-trash"></i></button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="modalNueva" tabindex="-1">
    <div class="modal-dialog">
        <form asp-action="CrearEleccion" method="post" class="modal-content">
            @Html.AntiForgeryToken()
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">Nueva Elección</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <label>Título</label>
                <input name="Titulo" class="form-control mb-2" required />
                <label>Fecha Inicio</label>
                <input name="FechaInicio" type="datetime-local" class="form-control mb-2" required />
                <label>Fecha Fin</label>
                <input name="FechaFin" type="datetime-local" class="form-control mb-2" required />
            </div>
            <div class="modal-footer">
                <button class="btn btn-success w-100">Guardar</button>
            </div>
        </form>
    </div>
</div>

<div class="modal fade" id="modalEditar" tabindex="-1">
    <div class="modal-dialog">
        <form asp-action="EditarEleccion" method="post" class="modal-content">
            @Html.AntiForgeryToken()
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Editar Elección</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" name="Id" id="editId" />
                <label>Título</label>
                <input name="Titulo" id="editTitulo" class="form-control mb-2" required />
                <label>Fecha Inicio</label>
                <input name="FechaInicio" id="editInicio" type="datetime-local" class="form-control mb-2" required />
                <label>Fecha Fin</label>
                <input name="FechaFin" id="editFin" type="datetime-local" class="form-control mb-2" required />
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary w-100">Actualizar</button>
            </div>
        </form>
    </div>
</div>

<script>
    function abrirEditar(id, titulo, inicio, fin) {
        document.getElementById('editId').value = id;
        document.getElementById('editTitulo').value = titulo;
        document.getElementById('editInicio').value = inicio;
        document.getElementById('editFin').value = fin;
        new bootstrap.Modal(document.getElementById('modalEditar')).show();
    }
</script>