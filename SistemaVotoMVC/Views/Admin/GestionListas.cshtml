@model IEnumerable<SistemaVotoModelos.Lista>

@{
    ViewData["Title"] = "Gestión de Listas";
    var eleccion = ViewBag.Eleccion as SistemaVotoModelos.Eleccion;
    int eleccionId = eleccion?.Id ?? 0;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h3 class="fw-bold mb-0">📌 Listas: @(eleccion?.Titulo ?? "")</h3>
        <small class="text-muted">
            Estado:
            <span class="badge @(eleccion?.Estado == "ACTIVA" ? "bg-success" : "bg-secondary")">
                @(eleccion?.Estado ?? "-")
            </span>
        </small>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="GestionElecciones" class="btn btn-outline-dark">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalNuevaLista">
            <i class="bi bi-plus-circle"></i> Nueva Lista
        </button>
    </div>
</div>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">@TempData["Mensaje"]<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">@TempData["Error"]<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
}

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th style="width: 50px;">ID</th>
                        <th>Nombre</th>
                        <th>Logo</th>
                        <th style="width: 200px;" class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null || !Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-4">No hay listas registradas.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var l in Model)
                        {
                            <tr>
                                <td>@l.Id</td>
                                <td class="fw-bold">@l.NombreLista</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(l.LogoUrl))
                                    {
                                        <img src="@l.LogoUrl" style="height: 40px; width:auto; border-radius: 4px;" />
                                    }
                                    else
                                    {
                                        <span class="text-muted small">Sin logo</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="d-flex justify-content-end gap-2">
                                        <button class="btn btn-sm btn-outline-primary"
                                                onclick="abrirEditar('@l.Id', '@l.NombreLista', '@l.LogoUrl')">
                                            <i class="bi bi-pencil"></i> Editar
                                        </button>

                                        <form asp-action="EliminarLista" method="post" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@l.Id" />
                                            <input type="hidden" name="eleccionId" value="@eleccionId" />
                                            <button class="btn btn-sm btn-outline-danger" onclick="return confirm('¿Borrar?')">
                                                <i class="bi bi-trash"></i> Eliminar
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="modalNuevaLista" tabindex="-1">
    <div class="modal-dialog">
        <form asp-action="CrearLista" method="post" class="modal-content">
            @Html.AntiForgeryToken()
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Nueva Lista</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" name="EleccionId" value="@eleccionId" />

                <label class="fw-bold">Nombre de la lista</label>
                <input name="NombreLista" class="form-control mb-3" required />

                <label class="fw-bold">URL del Logo</label>
                <input name="LogoUrl" class="form-control" placeholder="https://ejemplo.com/logo.png" />
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary w-100">Guardar</button>
            </div>
        </form>
    </div>
</div>

<div class="modal fade" id="modalEditarLista" tabindex="-1">
    <div class="modal-dialog">
        <form asp-action="EditarLista" method="post" class="modal-content">
            @Html.AntiForgeryToken()
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title">Editar Lista</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" name="Id" id="editId" />
                <input type="hidden" name="EleccionId" value="@eleccionId" />

                <label class="fw-bold">Nombre</label>
                <input name="NombreLista" id="editNombre" class="form-control mb-3" required />

                <label class="fw-bold">URL del Logo</label>
                <input name="LogoUrl" id="editLogo" class="form-control" />
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-info text-white w-100">Actualizar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function abrirEditar(id, nombre, logo) {
            document.getElementById("editId").value = id;
            document.getElementById("editNombre").value = nombre;
            document.getElementById("editLogo").value = logo;
            new bootstrap.Modal(document.getElementById('modalEditarLista')).show();
        }
    </script>
}